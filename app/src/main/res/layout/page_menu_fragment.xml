                            android:layout_marginTop="1dp"
                            android:layout_marginRight="1dp"
                            android:layoutDirection="inherit"
                            android:src="@drawable/ic_baseline_store_24"
                            app:fab_size="mini"
                            app:menu_fab_size="mini"
                            fab:fab_colorNormal="#FFFFFF"
                            fab:fab_colorPressed="@color/bootstrap_brand_secondary_fill"
                            fab:fab_colorRipple="#FAFAFA"
                            fab:fab_progress_showBackground="false" />

                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="6"
                    android:background="#000275D8"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        android:layout_margin="4dp"
                        android:background="#00CCCCCC"
                        android:backgroundTint="#00FFFFFF"
                        android:clickable="true"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="6dp">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="0dp"
                            android:orientation="vertical"
                            android:weightSum="12">

                            <Button
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/bootstrap_brand_secondary_fill"
                                android:backgroundTint="#FFFFFF"
                                android:fontFamily="@font/roboto_medium"
                                android:gravity="bottom|left"
                                android:text="Market"
                                android:textColor="@color/bootstrap_brand_secondary_text" />
                        </LinearLayout>

                        <com.github.clans.fab.FloatingActionButton

                            android:layout_width="28dp"
                            android:layout_height="23dp"
                            android:layout_gravity="top|left"
                            android:layout_marginTop="1dp"
                            android:layout_marginRight="1dp"
                            android:layoutDirection="inherit"
                            android:src="@drawable/ic_bookmark"
                            app:fab_size="mini"
                            app:menu_fab_size="mini"
                            fab:fab_colorNormal="#FFFFFF"
                            fab:fab_colorPressed="@color/bootstrap_brand_primary"
                            fab:fab_colorRipple="@color/cardview_shadow_start_color"
                            fab:fab_progress_showBackground="true" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="85dp"
                        android:layout_margin="4dp"
                        android:background="@color/bootstrap_brand_secondary_border"
                        android:backgroundTint="#00FFFFFF"
                        android:clickable="true"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="6dp">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="0dp"
                            android:orientation="vertical"
                            android:weightSum="12">

                            <Button
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/bootstrap_alert_cross_default"
                                android:backgroundTint="#FFFFFF"
                                android:fontFamily="@font/roboto_medium"
                                android:gravity="bottom|left"
                                android:text="Market"
                                android:textColor="@color/bootstrap_brand_secondary_text" />
                        </LinearLayout>

                        <com.github.clans.fab.FloatingActionButton

                            android:layout_width="28dp"
                            android:layout_height="23dp"
                            android:layout_gravity="top|left"
                            android:layout_marginTop="1dp"
                            android:layout_marginRight="1dp"
                            android:layoutDirection="inherit"
                            android:src="@drawable/ic_bookmark"
                            app:fab_size="mini"
                            app:menu_fab_size="mini"
                            fab:fab_colorNormal="#FFFFFF"
                            fab:fab_colorPressed="@color/bootstrap_brand_secondary_fill"
                            fab:fab_colorRipple="@color/cardview_shadow_start_color"
                            fab:fab_progress_showBackground="false" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="85dp"
                        android:layout_margin="4dp"
                        android:background="@color/bootstrap_brand_secondary_border"
                        android:backgroundTint="#00FFFFFF"
                        android:clickable="true"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="6dp">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="0dp"
                            android:orientation="vertical"
                            android:weightSum="12">

                            <Button
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/bootstrap_alert_cross_default"
                                android:backgroundTint="#FFFFFF"
                                android:fontFamily="@font/roboto_medium"
                                android:gravity="bottom|left"
                                android:text="Market"
                                android:textColor="@color/bootstrap_brand_secondary_text" />
                        </LinearLayout>

                        <com.github.clans.fab.FloatingActionButton

                            android:layout_width="28dp"
                            android:layout_height="23dp"
                            android:layout_gravity="top|left"
                            android:layout_marginTop="1dp"
                            android:layout_marginRight="1dp"
                            android:layoutDirection="inherit"
                            android:src="@drawable/ic_bookmark"
                            app:fab_size="mini"
                            app:menu_fab_size="mini"
                            fab:fab_colorNormal="#FFFFFF"
                            fab:fab_colorPressed="@color/bootstrap_brand_primary"
                            fab:fab_colorRipple="@color/cardview_shadow_start_color"
                            fab:fab_progress_showBackground="true" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="85dp"
                        android:layout_margin="4dp"
                        android:background="@color/bootstrap_brand_secondary_border"
                        android:backgroundTint="#00FFFFFF"
                        android:clickable="true"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="3dp">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="0dp"
                            android:orientation="vertical"
                            android:weightSum="12">

                            <Button
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/bootstrap_alert_cross_default"
                                android:backgroundTint="#FFFFFF"
                                android:fontFamily="@font/roboto_medium"
                                android:gravity="bottom|left"
                                android:text="Market"
                                android:textColor="@color/bootstrap_brand_secondary_text" />
                        </LinearLayout>

                        <com.github.clans.fab.FloatingActionButton

                            android:layout_width="28dp"
                            android:layout_height="23dp"
                            android:layout_gravity="top|left"
                            android:layout_marginTop="1dp"
                            android:layout_marginRight="1dp"
                            android:layoutDirection="inherit"
                            android:src="@drawable/ic_bookmark"
                            app:fab_size="mini"
                            app:menu_fab_size="mini"
                            fab:fab_colorNormal="#FFFFFF"
                            fab:fab_colorPressed="@color/bootstrap_brand_primary"
                            fab:fab_colorRipple="@color/cardview_shadow_start_color"
                            fab:fab_progress_showBackground="true" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="85dp"
                        android:layout_margin="4dp"
                        android:background="@color/bootstrap_brand_secondary_border"
                        android:backgroundTint="#00FFFFFF"
                        android:clickable="true"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="3dp">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="0dp"
                            android:orientation="vertical"
                            android:weightSum="12">

                            <Button
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/bootstrap_alert_cross_default"
                                android:backgroundTint="#FFFFFF"
                                android:fontFamily="@font/roboto_medium"
                                android:gravity="bottom|left"
                                android:text="Market"
                                android:textColor="@color/bootstrap_brand_secondary_text" />
                        </LinearLayout>

                        <com.github.clans.fab.FloatingActionButton

                            android:layout_width="28dp"
                            android:layout_height="23dp"
                            android:layout_gravity="top|left"
                            android:layout_marginTop="1dp"
                            android:layout_marginRight="1dp"
                            android:layoutDirection="inherit"
                            android:src="@drawable/ic_baseline_store_24"
                            app:fab_size="mini"
                            app:menu_fab_size="mini"
                            fab:fab_colorNormal="#FFFFFF"
                            fab:fab_colorPressed="@color/bootstrap_brand_secondary_fill"
                            fab:fab_colorRipple="#FAFAFA"
                            fab:fab_progress_showBackground="false" />

                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.beardedhen.androidbootstrap.BootstrapButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableTint="@color/bootstrap_brand_primary"
                    android:gravity="left"
                    android:textColor="@color/bootstrap_brand_primary"
                    android:textSize="16sp"
                    app:bootstrapBrand="regular"
                    app:bootstrapSize="lg"
                    app:bootstrapText="{fa_odnoklassniki_square}  Trợ giúp  hỗ trợ" />

                <com.beardedhen.androidbootstrap.BootstrapButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableTint="@color/bootstrap_brand_primary"
                    android:gravity="left"
                    android:textColor="@color/bootstrap_brand_primary"
                    android:textSize="16sp"

                    app:bootstrapBrand="regular"
                    app:bootstrapSize="lg"
                    app:bootstrapText="{fa_star}  Cài đặt  riêng tư" />

                <com.beardedhen.androidbootstrap.BootstrapButton
