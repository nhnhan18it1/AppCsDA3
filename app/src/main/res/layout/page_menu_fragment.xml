                            android:layout_height="23dp"
                            android:layout_gravity="center|left"
                            android:layout_marginTop="1dp"
                            android:layout_marginRight="1dp"
                            android:layout_marginBottom="12dp"
                            android:layoutDirection="inherit"
                            android:src="@drawable/ic_bookmark"
                            app:fab_size="mini"
                            app:menu_fab_size="mini"
                            fab:fab_colorNormal="#FFFFFF"
                            fab:fab_colorPressed="@color/bootstrap_brand_secondary_fill"
                            fab:fab_colorRipple="@color/cardview_shadow_start_color"
                            fab:fab_progress_showBackground="true" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        android:layout_margin="4dp"
                        android:background="@color/bootstrap_brand_secondary_border"
                        android:backgroundTint="#00FFFFFF"
                        android:clickable="true"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="3dp">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="0dp"
                            android:orientation="vertical"
                            android:weightSum="12">

                            <Button
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/bootstrap_alert_cross_default"
                                android:backgroundTint="#FFFFFF"
                                android:fontFamily="@font/roboto_medium"
                                android:gravity="bottom|left"
                                android:text="Market"
                                android:textColor="@color/bootstrap_brand_secondary_text" />
                        </LinearLayout>

                        <com.github.clans.fab.FloatingActionButton

                            android:layout_width="28dp"
                            android:layout_height="23dp"
                            android:layout_gravity="top|left"
                            android:layout_marginTop="1dp"
                            android:layout_marginRight="1dp"
                            android:layoutDirection="inherit"
                            android:src="@drawable/ic_baseline_store_24"
                            app:fab_size="mini"
                            app:menu_fab_size="mini"
                            fab:fab_colorNormal="#FFFFFF"
                            fab:fab_colorPressed="@color/bootstrap_brand_secondary_fill"
                            fab:fab_colorRipple="#FAFAFA"
                            fab:fab_progress_showBackground="false" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        android:layout_margin="4dp"
                        android:background="@color/bootstrap_brand_secondary_border"
                        android:backgroundTint="#00FFFFFF"
                        android:clickable="true"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="3dp">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="0dp"
                            android:orientation="vertical"
                            android:weightSum="12">

                            <Button
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/bootstrap_alert_cross_default"
                                android:backgroundTint="#FFFFFF"
                                android:fontFamily="@font/roboto_medium"
                                android:gravity="bottom|left"
                                android:text="Market"
                                android:textColor="@color/bootstrap_brand_secondary_text" />
                        </LinearLayout>

                        <com.github.clans.fab.FloatingActionButton

                            android:layout_width="28dp"
                            android:layout_height="23dp"
                            android:layout_gravity="top|left"
                            android:layout_marginTop="1dp"
                            android:layout_marginRight="1dp"
                            android:layoutDirection="inherit"
                            android:src="@drawable/ic_baseline_store_24"
