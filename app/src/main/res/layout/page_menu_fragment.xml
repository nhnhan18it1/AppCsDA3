<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:mfb="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BEE2E3E4"
    tools:context=".ui.dashboard.DashboardFragment"
    >

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00818A91"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="12"
            android:gravity="left"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Menu"
                android:layout_weight="8"
                android:fontFamily="@font/roboto_medium"
                android:textSize="20sp"

                android:layout_gravity="left|center"
                android:gravity="left|center"
                android:paddingStart="10dp"
                android:textColor="#0E0B0B"/>

            <at.markushi.ui.CircleButton
                android:id="@+id/notifi_btnSearch"
                android:layout_width="50dp"
                android:layout_height="45dp"
                android:layout_gravity="right"
                android:src="@drawable/ic_search"
                app:cb_color="#B0FFFFFF"
                app:cb_pressedRingWidth="8dip" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/btn_profile"
            android:paddingTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:weightSum="12"
            android:clickable="true"

            android:backgroundTint="@color/bootstrap_brand_danger"
            android:orientation="horizontal">
            <com.beardedhen.androidbootstrap.BootstrapCircleThumbnail
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_weight="2"
                android:src="@drawable/ac11"
                app:bootstrapBrand="info"
                app:bootstrapSize="lg"
                app:hasBorder="false"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:weightSum="12"
                android:orientation="vertical"
                android:paddingStart="10dp"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Nguyen Hai Nhan"
                    android:textColor="#000407"
                    android:textSize="18sp"
                     />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:fontFamily="@font/abeezee"
                    android:text="Xem trang cá nhân của bạn"
                    android:textColor="#727678"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>
        
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:isScrollContainer="true"
        android:nestedScrollingEnabled="true"
        android:layout_margin="5dp"
        android:paddingBottom="20dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:background="#00AAB0B5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="6"
                    android:background="#00818A91"
                    android:baselineAligned="false"
                    android:orientation="vertical"
                    android:paddingStart="5dp"
                    android:paddingEnd="4dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:background="#BACCCCCC"
                        android:backgroundTint="#FFFFFF"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="6dp">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="0dp"
                            android:orientation="vertical"
                            android:weightSum="12">

                            <ImageView
                                android:id="@+id/imageView5"
                                android:layout_width="match_parent"
                                android:layout_height="109dp"
                                android:layout_margin="0dp"
                                android:scaleType="centerCrop"
                                app:srcCompat="@drawable/ac11" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="12dp"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/textView6"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="3dp"
                                    android:paddingEnd="1dp"
                                    android:text="# **Share một số khóa học js chất lượng **"
                                    android:textColor="#302020"
                                    android:textSize="18sp"
                                    android:textStyle="bold" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:paddingStart="0dp"
                                    android:weightSum="12">

                                    <com.beardedhen.androidbootstrap.BootstrapCircleThumbnail
                                        android:layout_width="0dp"
                                        android:layout_height="35dp"
                                        android:layout_margin="2dp"
                                        android:layout_weight="4"
                                        android:src="@drawable/ac11"
                                        app:bootstrapBrand="secondary"
                                        app:bootstrapSize="md"
                                        app:hasBorder="false" />

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="8"
                                        android:gravity="center|left"
                                        android:text="Nguyen Hai Nhan"
                                        android:textSize="12sp" />
                                </LinearLayout>


                            </LinearLayout>
                        </LinearLayout>

                        <com.github.clans.fab.FloatingActionButton
