<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:weightSum="12"
    android:layout_height="100dp">
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/cmt_no_img"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_weight="2"
        android:background="@color/bootstrap_brand_secondary_fill"
        android:layout_gravity="left|center"
        android:scaleType="centerCrop"
        app:riv_corner_radius="70dp"
        android:src="@drawable/ac11"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="10"
            android:weightSum="12"
            >
            <TextView
                android:id="@+id/cmt_no_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="6"
                android:text="hello"
                android:paddingStart="10dp"
                android:paddingTop="5dp"
                android:fontFamily="@font/roboto"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#158E07"/>
            <TextView
                android:id="@+id/cm_no_content"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:text="hello"
                android:paddingStart="10dp"
                android:paddingTop="5dp"
                android:fontFamily="@font/roboto"
                android:textSize="18sp"
                android:textStyle="normal"
                android:textColor="#4D504C"/>
        </LinearLayout>


</LinearLayout>